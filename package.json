{
  "name": "bbcbasic-riscos-filetype",
  "displayName": "bbcbasic-riscos-filetype",
  "publisher": "vinca-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/illia-b/bbcbasic-vscext"
  },
  "description": "",
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.79.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bbcbasic.save",
        "title": "Save to RISC OS File",
        "icon": "$(save)"
      },
      {
        "command": "bbcbasic.load",
        "title": "Reload from RISC OS File",
        "icon": "$(refresh)"
      },
      {
        "command": "bbcbasic.open",
        "title": "Open RISC OS File",
        "icon": "$(refresh)"
      }
    ],
    "languages": [{
      "id": "bbcbasic",
      "aliases": ["BBC Basic", "RISC OS BBC Basic", "bbcbasic"],
      "extensions": [".bbc",".bbcbasic",".basic"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "bbcbasic",
      "scopeName": "source.bbcbasic",
      "path": "./syntaxes/bbcbasic.tmLanguage.json"
    }],
    "semanticTokenModifiers": [{
      "id": "system",
      "description": "Call for a system routine"
    }],
    "menus": {
      "editor/title": [
        {
          "command": "bbcbasic.save",
          "when": "editorLangId == bbcbasic",
          "group": "navigation"
        },
        {
          "command": "bbcbasic.load",
          "when": "editorLangId == bbcbasic",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "bbcbasic.open",
          "when": "resourceFilename =~ /,ffb$/",
          "group": "2_workspace"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.4.4",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
